<h4>Pizza</h4>
<hr />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row">
    <div class="form-group col-12">
        @Html.LabelFor(model => model.pizza.Nom, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.pizza.Nom, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pizza.Nom, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="form-group col-12 ">
        @Html.LabelFor(model => model.listePate, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.DropDownListFor(P => P.listePate, Model.listePate.Select(P => new SelectListItem { Text = P.Nom, Value = P.Id.ToString() }))
        </div>
    </div>
</div>

<br />
<div class="row">
    <div class="form-group col-12 ">
        @Html.LabelFor(model => model.listeIngredient, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.ListBoxFor(P => P.listeIngredient, Model.listeIngredient.Select(P => new SelectListItem { Text = P.Nom, Value = P.Id.ToString() }))

        </div>
    </div>
</div>
<br />